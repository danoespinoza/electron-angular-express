{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "sourceMap": false,
    "outDir": "./dist",
    "module": "commonjs",
    "types": [
      "node"
    ],
    "lib": [
      "es2018",
      "es2017",
      "es2016",
      "es2015",
      "dom"
    ]
  },
  "files": [
    "src/base.ts"
  ],
  "include": [],
  "exclude": [
    "node_modules",
    "src/backend/*.ts",
    "src/backend/**/*.ts",
    "src/browser/*.ts",
    "src/browser/**/*.ts",
    "src/common/*.ts",
    "src/common/**/*.ts"
  ]
}
